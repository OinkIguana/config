# some handy programs

# cat images
alias cati=img2txt
# using nvim by default
alias vi=nvim
# htop is nicer
alias top=htop

# enable colors in grep by default
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# replace ls with exa
alias ls='exa'
alias ll='exa -alg --git'
alias lt='exa -T'
alias llt='exa -lT'
alias l='exa'

# Dwarf Fortress... lets get into that?
alias dwarf="$HOME/bin/df_linux/df"

# Some typos I often make
alias clearls="clear; ls"
alias sgit="git"
